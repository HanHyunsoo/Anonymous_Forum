    </header>

    <section>
      <div class="container">
        <div class="row align-items-center">
          <div class="col-lg-6 order-lg-2">
            <div class="p-5">
              <img class="img-fluid rounded-circle" src="/assets/1.png" alt="">
            </div>
          </div>
          <div class="col-lg-6 order-lg-1">
            <div class="p-5">
              <h2 class="display-4">글 목록</h2>
              <%@posts.each do |x|%>
              <div class="card">
                  <div class="card-header">
                    <%=x.title%>
                  </div>
                  <div class="card-body">
                    <blockquote class="blockquote mb-0">
                        <p><%=x.content%></p>
                        <footer class="blockquote-footer">익명<br><cite title="Time"><%= x.created_at %></cite><br><a href='/home/edit/<%= x.id %>' onClick="window.open(this.href, '', 'width=400, height=430'); return false;">수정</a> <a href='/home/destroy/<%= x.id %>'>삭제</a></footer>
                        <br>
                        <p>
                          <% x.comments.each do |c|%>
                            댓글: <%=c.content%> <a href ='comments/delete/<%=c.id%>'> 삭제</a><br><br>
                          <%end%>
                          <br>
                          <form action ="/home/index/<%=x.id%>/create" method=post>
                          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                          <input type='textarea' name='comment' placeholder="댓글 입력">
                          <button type="submit" class="btn btn-outline-primary">댓글 작성</button>
                          </form>
                        </p>
                    </blockquote>
                  </div>
             </div>
             <br>
             <%end%>
            </div>
          </div>
        </div>
      </div>
